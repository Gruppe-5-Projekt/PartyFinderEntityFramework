@{
    int eventId = @Model.Id;
}
EventName: @Model.EventName
<br />
EventCapacity: @Model.CalculateCount().ToString() / @Model.EventCapacity
<br />
Start: @Model.StartDateTime
<br />
End: @Model.EndDateTime
<br />
Description: @Model.Description
<br />


<div class="testForms">
        @using (Html.BeginForm("LikeOrDislike", "Match", new { id = eventId, isMatched = true }, FormMethod.Post))
        //@Model Event
        {
            <input class="like" type="submit" value="Like"/>
        }
</div>
<div class="testForms">
        @using (Html.BeginForm("LikeOrDislike", "Match", new { id = eventId, isMatched = false }, FormMethod.Post))
        //@Model Event
        {
            <input class="dislike" type="submit" value="Disike"/>
        }
</div>

